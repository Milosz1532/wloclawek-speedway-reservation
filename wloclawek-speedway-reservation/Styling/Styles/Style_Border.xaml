<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Styling/Colors/Colors_Dark.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="Style_Border" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource GreyBrush}" />
        <Setter Property="CornerRadius" Value="25" />
        <!--<Setter Property="BorderThickness" Value="0,5,5,5" />-->
        <Setter Property="BorderBrush" Value="{DynamicResource RacingRedBrush}" />
    </Style>
</ResourceDictionary>
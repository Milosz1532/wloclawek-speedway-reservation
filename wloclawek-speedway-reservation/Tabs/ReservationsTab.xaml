<UserControl x:Class="wloclawek_speedway_reservation.Tabs.ReservationsTab"
             xmlns:Controls="clr-namespace:wloclawek_speedway_reservation.Styling.Controls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:wloclawek_speedway_reservation.Tabs"
             mc:Ignorable="d"
             d:DesignHeight="695" d:DesignWidth="1176">
    <DockPanel Margin="25">

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Image Source="/icons8-home-page-100.png"  Width="45" Height="45" />
            <Label Padding="10,0,0,0" Content="Reservations" FontFamily="Agency FB" FontSize="40" Foreground="{StaticResource MainTextBrush}">
            </Label>
        </StackPanel>
        <Rectangle DockPanel.Dock="Top" Height="5" Fill="{StaticResource VeryLightGreyBrush}" />

        <Controls:Control_WeekSchedule x:Name="Schedule" />
    </DockPanel>
</UserControl>